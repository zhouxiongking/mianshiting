<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	
	<package name="video" extends="struts-default" namespace="/">
		
		<action name="uploadVideoAction" class="videoAction" method="uploadVideo">
			<result name="success" type="redirectAction">
				<param name="actionName">doSwitchSuccessAction</param>
			</result>
			<result name="error">/html/videoUpload.html</result>
		</action>
		
	    <action name="doSwitchSuccessAction" class="videoAction" method="doSwitchSuccess">
	    	<result name="success">/html/videoSuccess.html</result>
	    </action>
	
		<action name="doShowVideoAction" class="videoAction" method="doShowVideo">
			<result name="success">/html/videoShow.html</result>
		</action>

		<action name="doSwitchVideoAction" class="videoAction" method="doSwitchVideo">
			<result name="success">/html/videoMain.html</result>
		</action> 		
		
		<action name="doClassifyVideoAction" class="videoAction" method="doClassifyVideo">
			<result name="success">/html/videoClassify.html</result>
		</action>
		
	</package>

	<package name="videos" extends="struts-default" namespace="/video">
		
		<action name="manageVideoAction" class="manageVideoAction" method="doSwitchVideo">
			<result name="success">/html/manage/manageVideo.html</result>
		</action>
	
		<action name="showVideoAction" class="manageVideoAction" method="doShowVideo">
			<result name="success">/html/manage/showVideo.html</result>
		</action>
		
		<action name="deleteVideoAction" class="manageVideoAction" method="doDeleteVideo">
			<result name="success" type="redirectAction">
				<param name="actionName">manageVideoAction</param>
			</result>
		</action>
		
	</package>

	<package name="video-json" extends="json-default" namespace="/video-json">
	
		<action name="*Action" class="videoAction" method="{1}">
			<result type="json"></result>
		</action>
		
	</package>
	
	<package name="managevideo-json" extends="json-default" namespace="/managevideo-json">
	
		<action name="*Action" class="manageVideoAction" method="{1}">
			<result type="json"></result>
		</action>
		
	</package>
	

</struts>
